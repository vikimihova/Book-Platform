@using BookPlatform.Core.ViewModels.Character
@model AddCharacterInputModel

<div class="container">
    <div class="row">
        <div class="col-md-9 col-sm-6 col-xs-12 min-vw-50">
            <form asp-action="Add" method="post">
                <div>
                    <label for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.BookId" class="form-label-add-edit">Select Book</label>
                    <div class="d-flex">
                        <select asp-for="@Model.BookId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Books, "Id", "Title"))">
                            <option value="">Select Book...</option>
                        </select>
                        <span asp-validation-for="@Model.BookId" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Save</button>
            </form>
        </div>
    </div>
</div>