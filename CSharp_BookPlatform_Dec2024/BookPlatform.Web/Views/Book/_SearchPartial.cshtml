@using BookPlatform.Core.ViewModels.Book
@model BookIndexViewModel

<form asp-action="Search" method="get">
    <div class="d-flex mb-4 align-items-center" style="width: 500px;">
        <div class="me-2 flex-grow-1">
            <input asp-for="Title" class="form-control" style="height: 40px;" placeholder="Search book by title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-dark" style="height: 40px;">Search</button>
    </div>    
</form>